@model AgroPack.Categorie

@{
    ViewBag.ActiveCategorie = "active";
    ViewBag.Title = "Modifier catégorie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Categorie</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="col-md-6">

            <div class="form-group">
                @Html.LabelFor(model => model.Name,"Nom Catégorie", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6">


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enregistrer" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la liste", "Categories","Compte")
</div>
</div>
