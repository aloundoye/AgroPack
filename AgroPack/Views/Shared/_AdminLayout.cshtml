<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - AgroPack</title>
    <!-- Custom fonts for this template-->
    <link href="~/AdminStyles/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/AdminStyles/css/sb-admin-2.min.css" rel="stylesheet">
    <!-- Custom styles for this page -->
    <link href="~/AdminStyles/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-success sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="../">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-leaf"></i>
                </div>
                <div class="sidebar-brand-text mx-3">AgroPack</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <li class="nav-item @ViewBag.ActiveIndex">
                <a class="nav-link" href="~/Compte/Index">
                    <i class="fas fa-user"></i>
                    <span>Votre Compte AgroPack</span>
                </a>
            </li>

            <hr class="sidebar-divider my-0">
            @if (User.IsInRole("Admin") || User.IsInRole("Agriculteur"))
            {
                <!-- Nav Item - Dashboard -->
                <li class="nav-item @ViewBag.ActiveDashboard">
                    <a class="nav-link" href="~/Compte/Dashboard">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Tableau de bord</span>
                    </a>
                </li>

                <li class="nav-item @ViewBag.ActiveCategorie">
                    <a class="nav-link" href="~/Compte/Categories">
                        <i class="fas fa-tags"></i>
                        <span>Catégories</span>
                    </a>
                </li>
                <li class="nav-item @ViewBag.ActiveProduit">
                    <a class="nav-link" href="~/Compte/Product">
                        <i class="fab fa-product-hunt"></i>
                        <span>Produits</span>
                    </a>
                </li>
                <li class="nav-item @ViewBag.ActiveChamps">
                    <a class="nav-link" href="~/Compte/Champs">
                        <i class="fas fa-tractor"></i>
                        <span>Mes Champs</span>
                    </a>
                </li>
            }

            
            <li class="nav-item @ViewBag.ActiveCommande">
                <a class="nav-link" href="~/Compte/Order">
                    <i class="fas fa-shopping-basket"></i>
                    <span>Commandes</span>
                </a>
            </li>

            <!-- Divider -->
            
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item @ViewBag.ActiveInfo">
                <a class="nav-link" href="~/Compte/">
                    <span>Informations personnelles</span>
                </a>
            </li>

            <li class="nav-item @ViewBag.ActiveAdress">
                <a class="nav-link" href="~/Compte/">
                    <span>Adresses</span>
                </a>
            </li>
            <li class="nav-item @ViewBag.ActivePassword">
                <a class="nav-link" href="~/Manage/ChangePassword">
                    <span>Modifier votre mot de passe</span>
                </a>
            </li>

            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                @Html.Partial("_NavbarDashboard")
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">@ViewBag.Title</h1>
                       @* <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>*@
                    </div>

                   
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->
               
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; AgroPack @DateTime.Now.Year</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Sélectionnez «Se déconnecter» ci-dessous si vous êtes prêt à mettre fin à votre session en cours.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuler</button>
                    @Html.ActionLink("Se déconnecter", "LogOff", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-primary" })
                    @*<a class="btn btn-primary" href="login.html">Logout</a>*@
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/AdminStyles/vendor/jquery/jquery.min.js"></script>
    <script src="~/AdminStyles/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core pluAdminStyles/gin JavaScript-->
    <script src="~/AdminStyles/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom sAdminStyles/cripts for all pages-->
    <script src="~/AdminStyles/js/sb-admin-2.min.js"></script>
    <!-- Page levAdminStyles/el plugins -->
    <script src="~/AdminStyles/vendor/chart.js/Chart.min.js"></script>
    <!-- Page levAdminStyles/el custom scripts -->
    <script src="~/AdminStyles/js/demo/chart-area-demo.js"></script>
    <script src="~/AdminStyles/js/demo/chart-pie-demo.js"></script>
    <!-- Page level plugins -->
    <script src="~/AdminStyles/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminStyles/vendor/datatables/dataTables.bootstrap4.min.js"></script>
                 
    <!-- Page level custom scripts -->
    <script src="~/AdminStyles/js/demo/datatables-demo.js"></script>
</body>
</html>
